	<Button name="DecursiveDebuffTemplate" virtual="true">

		<Size>
			<AbsDimension x="30" y="30"/>
		</Size>

		<Layers>
			<Layer level="OVERLAY">
				<Texture name="$parentIcon"/>
			</Layer>
		</Layers>

		<Scripts>
			<OnLoad>
				this.unit = "player";
				this.debuff = 1;
			</OnLoad>
			<OnEnter>
				Dcr_DebuffTemplate_OnEnter();
			</OnEnter>
			<OnLeave>
				DcrDisplay_Tooltip:Hide();
			</OnLeave>
			<OnClick>
				TargetUnit(this.unit);
				Dcr_Clean();
			</OnClick>
		</Scripts>
	</Button>
	
