						</OnLoad>
						<OnShow>
							Perl_OptionsMenu_CheckBox(this, Perl_Config.ArcaneBar);
						</OnShow>
						<OnClick>
							Perl_Config.ArcaneBar = Perl_OptionsMenu_Toggle(Perl_Config.ArcaneBar);
