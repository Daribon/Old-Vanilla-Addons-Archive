	<!-- Guilded Traders frame money input frame -->
	<Frame name="GuildedTradersFrameInputMoneyFrame" toplevel="true" parent="UIParent" hidden="true">
		<Size>
			<AbsDimension x="200" y="85"/>
		</Size>
		<Anchors>
			<Anchor point="TOPLEFT" relativeTo="GuildedFrame" relativePoint="TOPRIGHT">
				<Offset>
					<AbsDimension x="20" y="0"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Backdrop name="$parentBackdrop" bgFile="Interface\TutorialFrame\TutorialFrameBackground" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
			<EdgeSize>
				<AbsValue val="16"/>
			</EdgeSize>
			<TileSize>
				<AbsValue val="32"/>
			</TileSize>
			<BackgroundInsets>
				<AbsInset left="5" right="5" top="5" bottom="5"/>
			</BackgroundInsets>
		</Backdrop>
		<Layers>
			<Layer level="BACKGROUND">
				<FontString name="$parentTitle" inherits="GameFontNormal" justifyH="CENTER" text="GUILDED_TRADERS_ENTER_PRICE">
					<Size>
						<AbsDimension x="200" y="16"/>
					</Size>
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="-7"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
            <Frame name="GuildedTradersFrameInputMoneyFrameCash" inherits="MoneyInputFrameTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="GuildedTradersFrameInputMoneyFrame" relativePoint="TOPLEFT">
						<Offset>
							<AbsDimension x="20" y="-26"/>
						</Offset>
					</Anchor>
				</Anchors>
            </Frame>
			<Button name="GuildedTradersFrameInputMoneyFrameOkayButton" inherits="UIPanelButtonTemplate" text="OKAY">
				<Size>
					<AbsDimension x="90" y="21"/>
				</Size>
				<Anchors>
					<Anchor point="BOTTOMLEFT" relativeTo="GuildedTradersFrameInputMoneyFrame" relativePoint="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="10" y="10"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
        			    if ( (GuildedTradersFrameInputMoneyFrame.moneyFrame ~= nil) and (GuildedTradersFrameInputMoneyFrame.moneyFrame.staticMoney ~= nil) ) then
						    local idx = GuildedTradersFrameInputMoneyFrame.moneyFrame:GetParent().index;
    	        		    GuildedConfig.stock[idx].price = MoneyInputFrame_GetCopper(GuildedTradersFrameInputMoneyFrameCash);
							if (GuildedConfig.stock[idx].wts) then
    							GuildedTraders.sendBuySellItem(GuildedConfig.stock[idx].link, "WTS");
							end
							if (GuildedConfig.stock[idx].wtb) then
    							GuildedTraders.sendBuySellItem(GuildedConfig.stock[idx].link, "WTB");
							end
				        end
						GuildedTradersFrameInputMoneyFrame:Hide();
						GuildedTradersGUI.onUpdate();
					</OnClick>
				</Scripts>
			</Button>
			<Button name="GuildedTradersFrameInputMoneyFrameCancelButton" inherits="UIPanelButtonTemplate" text="CANCEL">
				<Size>
					<AbsDimension x="90" y="21"/>
				</Size>
				<Anchors>
					<Anchor point="BOTTOMRIGHT" relativeTo="GuildedTradersFrameInputMoneyFrame" relativePoint="BOTTOMRIGHT">
						<Offset>
							<AbsDimension x="-10" y="10"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						GuildedTradersFrameInputMoneyFrame:Hide();
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				MoneyInputFrame_SetCopper(GuildedTradersFrameInputMoneyFrameCash, 1);
			</OnLoad>
			<OnShow>
			    if ( (GuildedTradersFrameInputMoneyFrame.moneyFrame ~= nil) and (GuildedTradersFrameInputMoneyFrame.moneyFrame.staticMoney ~= nil) ) then
    			    MoneyInputFrame_SetCopper(GuildedTradersFrameInputMoneyFrameCash, GuildedTradersFrameInputMoneyFrame.moneyFrame.staticMoney);
				else
    			    MoneyInputFrame_SetCopper(GuildedTradersFrameInputMoneyFrameCash, 1);
				end
				GuildedTradersFrameInputMoneyFrame:Raise();
				PlaySound("MONEYFRAMEOPEN");
			</OnShow>
			<OnHide>
				PlaySound("MONEYFRAMECLOSE");
			</OnHide>
		</Scripts>
	</Frame>
		
	<!-- Guilded Traders frame tickbox template -->
	<Frame name="GuildedTradersFrameTickboxTemplate" virtual="true">
		<Size>
			<AbsDimension x="40" y="14"/>
		</Size>
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentText" inherits="GameFontNormalSmall">
					<Anchors>
						<Anchor point="LEFT" relativeTo="$parent">
							<Offset>
								<AbsDimension x="0" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<CheckButton name="$parentTickbox" inherits="UICheckButtonTemplate">
				<Size>
					<AbsDimension x="14" y="14"/>
				</Size>
				<Anchors>
					<Anchor point="LEFT" relativeTo="$parentText" relativePoint="RIGHT">
						<Offset>
							<AbsDimension x="2" y="-1"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
		        		local button = getglobal(this:GetParent():GetParent():GetName());
						local flag = getglobal(this:GetParent():GetName().."Text"):GetText();

						if ( this:GetChecked() ) then
							PlaySound("igMainMenuOptionCheckBoxOn");
    						GuildedConfig.flagItem(button.link, flag, true);
						else
							PlaySound("igMainMenuOptionCheckBoxOff");
    						GuildedConfig.flagItem(button.link, flag, false);
						end
						GuildedTraders.sendBuySellItem(button.link, flag);
					</OnClick>
					<OnEnter>
						if ( this.tooltipText ) then
							GameTooltip:SetOwner(this, "ANCHOR_RIGHT");
							GameTooltip:SetText(this.tooltipText, nil, nil, nil, nil, 1);
						end
						if ( this.tooltipRequirement ) then
							GameTooltip:AddLine(this.tooltipRequirement, "", 1.0, 1.0, 1.0);
							GameTooltip:Show();
						end
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide();
					</OnLeave>
				</Scripts>
			</CheckButton>
		</Frames>
	</Frame>

