<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<!-- LUA Scripts -->
	<Script file="localization.lua"/>
	<Script file="Perl_OptionsMenu.lua"/>

	<!-- Template Frames -->
	<Frame name="Perl_Divider" hidden="false" virtual="true">
		<Size>
			<AbsDimension x="600" y="45"/>
		</Size>
		<Layers>
			<Layer level="ARTWORK">
				<Texture name="$parentHeader" file="Interface\DialogFrame\UI-DialogBox-Header">
					<Size>
						<AbsDimension x="350" y="45"/>
					</Size>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
				<FontString name="$parentHeaderText" inherits="GameFontNormal">
					<Anchors>
						<Anchor point="TOP" relativeTo="$parentHeader">
							<Offset>
								<AbsDimension x="0" y="-7"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
			<Layer level="BACKGROUND">
				<Texture name="$parentLine" file="Interface\HelpFrame\HelpFrameDivider">
					<Size>
						<AbsDimension x="580" y="20" />
					</Size>
					<Anchors>
						<Anchor point="CENTER">
                            <Offset>
                                <AbsDimension y="7"/>
                            </Offset>
						</Anchor>
					</Anchors>
					<TexCoords left="0" right="1.0" top="0.3125" bottom="0.625" />
				</Texture>
			</Layer>
		</Layers>
	</Frame>
	
	<Button name="Perl_OptionsMenu_Tab" inherits="OptionsButtonTemplate" virtual="true">
		<Scripts>
			<OnClick>
				Perl_OptionsMenu_Select(this:GetName());
			</OnClick>
		</Scripts>
	</Button>
	
	<!-- Options Frames -->
	<Frame name="Perl_OptionsMenu_Frame" frameStrata="DIALOG" enableMouse="true" movable="true" hidden="true" parent="UIParent" enableKeyboard="true">
		
		<!-- Specify Window Size-->
		<Size>
			<AbsDimension x="600" y="300"/>
		</Size>
		<Scripts>
			<OnLoad>
				Perl_OptionsMenu_OnLoad();
			</OnLoad>
			<OnShow>
				if ((not MapLibrary) or (not Chronos)) then
					Perl_OptionsMenu_Frame_Party_Toggle_ShowPartyDistance:Hide();
					Perl_OptionsMenu_Frame_Target_Toggle_ShowTargetDistance:Hide();
					Perl_Config.ShowTargetDistance = 0;
					Perl_Config.ShowPartyDistance = 0;
				end
			</OnShow>
			<OnHide>
				Perl_OptionsMenu_OnHide();
			</OnHide>
		</Scripts>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="11" right="12" top="12" bottom="11"/>
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32"/>
			</TileSize>
			<EdgeSize>
				<AbsValue val="32"/>
			</EdgeSize>
		</Backdrop>
		<Layers>
			<Layer level="ARTWORK">
				<Texture name="$parent_Header" file="Interface\DialogFrame\UI-DialogBox-Header">
					<Size>
						<AbsDimension x="512" y="64"/>
					</Size>
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="12"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
				<FontString inherits="GameFontNormal" text="Nymbia's Perl Unitframe Options">
					<Anchors>
						<Anchor point="TOP" relativeTo="$parent_Header">
							<Offset>
								<AbsDimension x="0" y="-14"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
